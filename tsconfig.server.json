{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "noEmit": false,
    "jsx": "preserve",
    "types": ["node"]
  },
  "include": [
    "src/server/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/client",
    "node_modules",
    "dist"
  ]
}